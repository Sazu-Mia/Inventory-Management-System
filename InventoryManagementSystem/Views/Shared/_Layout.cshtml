<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnnoRokom</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.styles.css" asp-append-version="true" />

    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <!-- jQuery UI CSS for DatePicker -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

    <style>
        body {
            font-size: 11pt !important;
            color: black !important;
        }

        table .btn {
            font-size: 8pt !important;
            padding: 3px 5px !important;
        }

        table th, table td {
            color: black !important;
            font-weight: normal !important;
        }

        .col-form-label, .form-control {
            color: #606066 !important;
        }

        .form-control {
            padding: 1px 20px 1px 8px;
            border: 1px solid #606066;
            height: 30px;
        }

        .dropdown-item {
            color: sienna;
            background: #ADD8E6 !important;
            font-size: 13px;
            width: 175px !important;
            border-radius: 30px;
            margin-bottom: 5px;
        }

            .dropdown-item:hover {
                background: linear-gradient(90deg, gray 35%, #E5EEEF 100%) !important;
            }

        .form-group {
            margin-bottom: 6px !important;
        }

        #sidebar {
            min-height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }

            #sidebar .nav-link {
                color: white;
            }

                #sidebar .nav-link:hover {
                    background-color: #495057;
                }
/* 
        #main-content {
            margin-left: 250px;
        } */


        #main-content {
            width: 85% !important;
        }

       

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-light {
            background-color: #0f5731 !important;
        }

        .navbar-collapse {
            margin-left: 250px;
        }

            .navbar-collapse .navbar-nav .nav-link {
                color: white !important;
            }
    </style>

    @RenderSection("Style", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-list"></i> Category
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">
                        <i class="fas fa-box"></i> Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Supplier" asp-action="Index">
                        <i class="fas fa-truck"></i> Supplier
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customer" asp-action="Index">
                        <i class="fas fa-users"></i> Customer
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PurchaseOrder" asp-action="Index">
                        <i class="fas fa-receipt"></i> Purchase Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PurchaseOrder" asp-action="PurchaseProduct">
                        <i class="fas fa-cart-plus"></i> Purchase Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="SalesOrder" asp-action="Index">
                        <i class="fas fa-receipt"></i> Sales Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="SalesOrder" asp-action="SalesProduct">
                        <i class="fas fa-balance-scale"></i> Product Sale
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Report" asp-action="Index">
                        <i class="fas fa-print"></i> Report
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div id="main-content">
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">OnnoRokom Projukti Limited</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted mt-3">
                <div class="container">
                    &copy; 2024 - Inventory Management System - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI for DatePicker -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Common.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
