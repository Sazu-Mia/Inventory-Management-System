@model CategoryVM
@{
    ViewData["Title"] = "Purchase Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

@section Style {
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 20%;
        }

        .vartical-table td {
            width: 20%;
        }

        .table td, .table th {
            padding: .2rem;
            font-size: 12px;
        }

    </style>
}

<div class="print-card" style="width: 100%;">
    <div class="print-card-body">

        <div class="container-fluid">
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    @* <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" /> *@
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <p style="font-size:25px; text-align: center; margin-left: 40%;"><b>OnnoRokom Projukti Limited.</b></p>
                        <p style="font-size:20px; text-align: center; margin-left: 40%;"><b>HEAD OFFICE: DHAKA</b></p>
                        <p style="font-size:20px; text-align: center; margin-left: 40%;"><b>Procurement Department</b></p>
                    </div>
                </div>

            </div>
        </div>

        <br />

        <div class="container-fluid" style="color:black;">

            <p style="text-align: center; font-size: 20px;">Purchase report from @ViewBag.fromDate to @ViewBag.toDate</p>
            <table class="table table-bordered">
                <thead>
                    <tr style="background-color: gray !important">
                        <th style="font-size: 15px;">Purchase Order No</th>
                        <th style="font-size: 15px;">Supplier</th>
                        <th style="font-size: 15px;">Product</th>
                        <th style="font-size: 15px;">Order Date</th>
                        <th style="font-size: 15px;">Quantity</th>
                        <th style="font-size: 15px;">Price Per Unit</th>
                        <th style="font-size: 15px;">Total</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.salesOrderVMs)
                    {
                        <tr>
                            <td style="text-align: center; font-size: 15px;">@item.PurchaseOrderNo</td>
                            <td style="text-align: center; font-size: 15px;">@item.SupplierName</td>
                            <td style="text-align: center; font-size: 15px;">@item.ProductName</td>
                            <td style="text-align: center; font-size: 15px;">@item.OrderDate?.ToString("dd-MMM-yyyy")</td>
                            <td style="text-align: right; font-size: 15px;">@item.Quantity</td>
                            <td style="text-align: right; font-size: 15px;">@item.PricePerUnit</td>
                            <td style="text-align: right; font-size: 15px;">@item.TotalPrice</td>
                        </tr>
                    }


                </tbody>

            </table>



        </div>
    </div>
</div>


